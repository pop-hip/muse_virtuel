<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=Montserrat|Poppins&display=swap" rel="stylesheet">
<h1>Emotions</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emotions.each do |emotion| %>
      <tr>
        <td><%= emotion.titre %></td>
        <td><%= emotion.description %></td>
        <td><%= link_to 'Show', emotion %></td>
        <td><%= link_to 'Edit', edit_emotion_path(emotion) %></td>
        <td><%= link_to 'Destroy', emotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Emotion', new_emotion_path %>
